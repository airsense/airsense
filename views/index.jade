extends layout

block content
  h1 #{title}
  br

  form(action="/completedata", method="post")
    table.table.table-striped.table-bordered
      tr
        td Device Name
        td Latitude
        td Longitude
        td Carbon Monoxide
        td Time
      if (typeof dataset === "undefined")
        tr
          td
      else
        each data in dataset
          tr
            td #{data.device_id}
            td #{data.gps_lat}
            td #{data.gps_long}
            td #{data.co_raw}
            td #{data.gmt_time}
            td
              input(type="checkbox", name="#{data.id}", value="#{!data.deleted}", checked=data.deleted)
    button.btn(type="submit") Update dataset
  hr
